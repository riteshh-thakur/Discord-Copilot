{
  "version": 2,
  "name": "discord-copilot",
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/next"
    }
  ],
  "env": {
    "NEXT_PUBLIC_BACK4APP_APP_ID": "@NEXT_PUBLIC_BACK4APP_APP_ID",
    "NEXT_PUBLIC_BACK4APP_JS_KEY": "@NEXT_PUBLIC_BACK4APP_JS_KEY",
    "NEXT_PUBLIC_BACK4APP_SERVER_URL": "@NEXT_PUBLIC_BACK4APP_SERVER_URL",
    "BACK4APP_APP_ID": "@BACK4APP_APP_ID",
    "BACK4APP_MASTER_KEY": "@BACK4APP_MASTER_KEY",
    "BACK4APP_SERVER_URL": "@BACK4APP_SERVER_URL",
    "DISCORD_BOT_TOKEN": "@DISCORD_BOT_TOKEN",
    "OPENROUTER_API_KEY": "@OPENROUTER_API_KEY"
  },
  "build": {
    "env": {
      "NEXT_PUBLIC_BACK4APP_APP_ID": "@NEXT_PUBLIC_BACK4APP_APP_ID",
      "NEXT_PUBLIC_BACK4APP_JS_KEY": "@NEXT_PUBLIC_BACK4APP_JS_KEY",
      "NEXT_PUBLIC_BACK4APP_SERVER_URL": "@NEXT_PUBLIC_BACK4APP_SERVER_URL"
    }
  },
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        },
        {
          "key": "Access-Control-Allow-Methods",
          "value": "GET, POST, PUT, DELETE, OPTIONS"
        },
        {
          "key": "Access-Control-Allow-Headers",
          "value": "Content-Type, Authorization"
        }
      ]
    }
  ]
}
